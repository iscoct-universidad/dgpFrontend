{
    "collectCoverageFrom": [
        "src/**/*.ts", "src/**/*.tsx"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules",
        "./src/inversify.config.ts",
        "./src/index.tsx"
    ],
    "coverageDirectory": "./spec/Reports/coverage",
    "coverageReporters": [
        "cobertura",
        "lcov"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 95,
            "functions": 95,
            "lines": 95,
            "statements": -10
        }
    },
    "errorOnDeprecated": true,
    "maxConcurrency": 20,
    "moduleFileExtensions": [ "tsx", "js" ],
    "notify": true,
    "notifyMode": "always",
    "projects": ["."],
    "reporters": [
        "default",
        "jest-html-reporter",
        "jest-junit"
    ],
    "restoreMocks": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "snapshotSerializers": [
        "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
        "./spec/setupTests.ts"
    ],
    "moduleNameMapper": {
        "^.+\\.(css|scss)$": "identity-obj-proxy"
    }
}